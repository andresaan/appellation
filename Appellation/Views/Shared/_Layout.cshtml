<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Appellation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/OldTheme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Appellation.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/SongRec.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Verify.css" asp-append-version="true" />


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark border-bottom box-shadow">
            <div class="navigation-link-container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Appellation</a>

                <a class="navigation-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>

                <a class="navigation-link" asp-area="" asp-controller="SongRecommendations" asp-action="Index">Recommendations</a>

                <a class="navigation-link" asp-area="" asp-controller="SongRecommendations" asp-action="Favorites">Favorites</a>

                <a class="cross-button__small logout" asp-area="" asp-controller="Home" asp-action="LogOut">Log Out</a>
            </div>
        </nav>
    </header>

    @RenderBody()

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Appellation - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
