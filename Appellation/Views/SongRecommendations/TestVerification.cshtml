@using Data.Seed;
@model SeedVerificationModel

<div>
    <form asp-controller="SongRecommendations" asp-action="Index">
        @for (var i = 0; i < Model.SeedIntermediaries.Count(); i++)
        {
            <div>
                <p>Verify which @Model.SeedIntermediaries[i].SeedType you would like to use for inspiration when generating your song recommendations</p>
            </div>

            <input type="hidden" asp-for="@Model.VerifiedSeeds[i].SeedType" value="@Model.SeedIntermediaries[i].SeedType" />

            @for (var j = 0; j < Model.SeedIntermediaries[i].PotentialSeeds.Count(); j++)
            {           
                <input type="hidden" asp-for="@Model.VerifiedSeeds[i].SpotifyId" value="@Model.SeedIntermediaries[i].PotentialSeeds[j].SpotifyId" />
                
                <label asp-for="@Model.VerifiedSeeds[i].SpotifyId">
                    
                    @Model.SeedIntermediaries[i].PotentialSeeds[j].ArtistName

                    <input type="checkbox" name="@Model.VerifiedSeeds" value="@Model.SeedIntermediaries[i].PotentialSeeds[j].SpotifyId" />
                
                </label>
            }
        }

        @for (var i = 0; i < Model.TrackSeedIntermediaries.Count(); i++)
        {
            <div>
                <p>Verify which @Model.TrackSeedIntermediaries[i].SeedType you would like to use for inspiration when generating your song recommendations</p>
            </div>

            <input type="hidden" asp-for="@Model.TrackSeedIntermediaries[i].SeedType" value="@Model.TrackSeedIntermediaries[i].SeedType" />

            @for (var j = 0; j < Model.TrackSeedIntermediaries[i].TrackPotentialSeeds.Count(); j++)
            {
                <input type="hidden" asp-for="@Model.TrackSeedIntermediaries[i].TrackPotentialSeeds[j].SpotifyId" value="@Model.TrackSeedIntermediaries[i].TrackPotentialSeeds[j].SpotifyId" />
                <input type="hidden" asp-for="@Model.TrackSeedIntermediaries[i].TrackPotentialSeeds[j].TrackName" value="@Model.TrackSeedIntermediaries[i].TrackPotentialSeeds[j].TrackName" />
                <input type="hidden" asp-for="@Model.TrackSeedIntermediaries[i].TrackPotentialSeeds[j].SeedType" value="@Model.TrackSeedIntermediaries[i].TrackPotentialSeeds[j].SeedType" />
                <input type="hidden" asp-for="@Model.TrackSeedIntermediaries[i].TrackPotentialSeeds[j].PerformingArtist" value="@Model.TrackSeedIntermediaries[i].TrackPotentialSeeds[j].PerformingArtist" />


                <label asp-for="@Model.TrackSeedIntermediaries[i].TrackPotentialSeeds[j].Verified">
                    <div>
                        <p>Track Name: @Model.TrackSeedIntermediaries[i].TrackPotentialSeeds[j].TrackName</p>
                        <p>Performing Artist: @Model.TrackSeedIntermediaries[i].TrackPotentialSeeds[j].PerformingArtist</p>
                    </div>
                </label>
                <input type="checkbox" asp-for="@Model.TrackSeedIntermediaries[i].TrackPotentialSeeds[j].Verified" value="true" />
            }
        }

        <input type="submit" />
    </form>
</div>